<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@layout/waiting_background</item>
    </style>
    <style name="ThemeNAB" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PrimaryText" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="SecondaryText" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>
    <style name="Title" parent="android:Widget.TextView">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>