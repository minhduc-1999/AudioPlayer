<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:background="@color/colorPrimary"
    android:id="@+id/audio_item">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_img_card"
        android:layout_margin="3dp"
        app:cardCornerRadius="8dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/music_img"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/menu_more"
        android:layout_toRightOf="@+id/music_img_card">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song name"
            android:layout_marginLeft="10dp"
            android:textSize="50px"
            android:textColor="@android:color/primary_text_dark"
            android:id="@+id/music_file_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/music_file_name"
            android:layout_centerVertical="true"
            android:textColor="@android:color/secondary_text_dark"
            android:id="@+id/music_artist_name"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/menu_more"
        android:src="@drawable/ic_round_more_vert_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"/>

</RelativeLayout>